{
	"name": "yeoman-ui",
	"displayName": "Yeoman UI",
	"publisher": "SAP",
	"license": "Apache 2.0",
	"description": "Provide rich user experience for Yeoman generators using VSCode extension or the browser",
	"repository": "https://github.com/SAP/yeoman-ui",
	"version": "0.0.8",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:sap.loadYowiz"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sap.loadYowiz",
				"title": "Load yowiz",
				"category": "Yowiz"
			}
		]
	},
	"scripts": {
		"vue:prep": "cd ../frontend && npm i",
		"vue:cp": "cd ../frontend && npm run build && cd ../backend && rimraf out/media && cd ../frontend/dist && copyfiles ** **/** ../../backend/out/media",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package . && copyfiles *.vsix ./publish/",
		"test_old": "npm run compile && node ./node_modules/vscode/bin/test",
		"test": "nyc mocha -p tsconfig.json --opts ./mocha.opts",
		"run:ws": "node ./out/src/test/index.js",
		"lint": "eslint ./**/*.ts"
	},
	"dependencies": {
		"@sap-devx/webview-rpc": "^0.1.2",
		"lodash": "^4.17.15",
		"strip-ansi": "^5.2.0",
		"ws": "^7.1.2",
		"yeoman-environment": "^2.4.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.5",
		"@types/inquirer": "^6.5.0",
		"@types/lodash": "^4.14.145",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.12.21",
		"@types/sinon": "^7.5.0",
		"@types/strip-ansi": "^5.2.1",
		"@types/ws": "^6.0.3",
		"@types/yeoman-environment": "^2.3.2",
		"@typescript-eslint/eslint-plugin": "^2.8.0",
		"@typescript-eslint/parser": "^2.8.0",
		"chai": "^4.2.0",
		"copyfiles": "^2.1.1",
		"eslint": "^6.6.0",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"rimraf": "^3.0.0",
		"sinon": "^7.5.0",
		"ts-node": "^8.5.2",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-no-unused-expression-chai": "^0.1.4",
		"typescript": "^3.6.1",
		"vsce": "^1.68.0",
		"vscode": "^1.1.28"
	}
}

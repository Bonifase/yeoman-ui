{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./out",
		"sourceMap": true,
		"rootDir": ".",
		"rootDirs": ["./src", "./tests"],
		"alwaysStrict": true,
		"allowJs": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"traceResolution": false,
		"declaration": true
	},
	"include": ["./src/**/*", "./tests/**/*"],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
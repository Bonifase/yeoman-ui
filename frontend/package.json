{
  "name": "yeoman-ui-frontend",
  "displayName": "Yeoman UI Frontend",
  "version": "0.1.0",
  "publisher": "SAP",
  "license": "Apache 2.0",
  "description": "Frontend for the yeoman UI framework",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-dev": "vue-cli-service build --mode development",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.2",
    "lodash": "^4.17.15",
    "vue": "^2.6.10",
    "core-js": "2.6.6",
    "jquery": "1.9.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-unit-jest": "4.0.5",
    "@vue/test-utils": "^1.0.0-beta.29",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.6.10",
    "vue-jest": "^3.0.5",
    "jest-serializer-vue": "^2.0.2",
    "jest": "^24.9.0",
    "babel-jest": "^24.9.0",
    "expect": "^24.9.0",
    "mock-socket": "^9.0.2",
    "webpack": "^4.41.2",
    "canvas": "2.5.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "js",
      "vue",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
